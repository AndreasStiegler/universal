{
    "test.darwin.app": {
        "name": "Test",
        "contexts": {
            "OS": [
                {
                    "id": "darwin"
                }
            ]
        },

        "settingsHandlers": [{
            "type": "gpii.settingsHandlers.JSONSettingsHandler",
            "options": {
                "filename": "${{environment}.HOME}/c4a-deleteme.json"
            },
            "capabilities": [
                "applications.test\\.darwin\\.app.id"
            ]
        }],

         "lifecycleManager": {
            "start": [
                "setSettings"
            ],
            "stop": [
                "restoreSettings"
            ]
        }
    }
}